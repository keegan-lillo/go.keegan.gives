{
  "include": ["./src/**/*", "./types/**/*"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "jsx": "preserve",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitReturns": true,
    "outDir": "lib",
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext"
  }
}
